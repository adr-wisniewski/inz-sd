<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//LOGGER" "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>

        <appender name="hb" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p: %c - %m%n" />
		</layout>
	</appender>
	
	<!-- Application Loggers -->
	<logger name="sd">
            <level value="all" />
	</logger>

        <!--logger name="sd.infrastructure.util.GenericUtil">
            <level value="debug" />
        </logger-->
	
	<!-- 3rdparty Loggers -->
	<logger name="org.springframework.core">
            <level value="warn" />
	</logger>
	
	<logger name="org.springframework.beans">
            <level value="warn" />
	</logger>
	
	<logger name="org.springframework.context">
            <level value="warn" />
	</logger>

	<logger name="org.springframework.web">
            <level value="warn" />
	</logger>

        <!-- allow logging of standard spring exceptions -->
        <logger name="org.springframework.web.servlet.mvc.support.DefaultHandlerExceptionResolver">
            <level value="debug" />
	</logger>
        
	<logger name="org.springframework.security">
            <level value="warn" />
	</logger>
	
	<logger name="org.springframework.ws">
            <level value="warn" />
	</logger>

        <!-- org.hibernate -->
        <logger name="org.hibernate">
            <level value="warn" />
            <appender-ref ref="hb" />
	</logger>

        <!--logger name="org.hibernate.sql">
            <level value="debug" />
	</logger>

        <logger name="org.hibernate.type">
            <level value="trace" />
	</logger>

        <logger name="org.hibernate.hql">
            <level value="debug" />
	</logger>

        <logger name="org.hibernate.hql.ast.AST">
            <level value="info" />
	</logger>

        <logger name="org.hibernate.tool.hbm2ddl">
            <level value="warn" />
	</logger>

        <logger name="org.hibernate.jdbc">
            <level value="debug" />
	</logger>

        <logger name="org.hibernate.cache">
            <level value="info" />
	</logger-->

	<!-- Root Logger -->
	<root>
            <priority value="warn" />
            <appender-ref ref="console" />
	</root>
	
</log4j:configuration>
