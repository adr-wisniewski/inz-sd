<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <!-- connection -->
    <property name="hibernate.dialect">org.hibernate.dialect.Oracle10gDialect</property>
    <property name="hibernate.connection.driver_class">oracle.jdbc.driver.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@127.0.0.1:1521:xe</property>
    <property name="hibernate.connection.username">sd</property>
    <property name="hibernate.connection.password">sd</property>
    <!-- generation -->
    <!--property name="hibernate.hbm2ddl.auto">update</property-->
    <!-- showing sql -->
    <property name="hibernate.show_sql">true</property>
    <property name="hibernate.format_sql">true</property>
    <property name="hibernate.use_sql_comments">true</property>
    
    <!-- cache -->
    <!-- TODO: enable cache and test it -->
    <property name="hibernate.cache.use_second_level_cache">false</property>
    <property name="hibernate.cache.use_query_cache">false</property>
    <!--property name="hibernate.cache.region.factory_class">net.sf.ehcache.hibernate.EhCacheRegionFactory</prop-->

    <!-- mappings -->
    <mapping class="servicedesk.infrastructure.security.domain.Role"/>
    <mapping class="servicedesk.infrastructure.security.domain.User"/>
    <mapping class="servicedesk.infrastructure.security.domain.Privilege"/>

    <mapping class="servicedesk.common.announcement.domain.Announcement"/>
    <mapping class="servicedesk.common.attachment.domain.Attachment"/>

    <mapping class="servicedesk.domain.Comment"/>
    <mapping class="servicedesk.domain.Department"/>
    <mapping class="servicedesk.domain.Employee"/>
    <mapping class="servicedesk.domain.Job"/>
    
    <mapping class="servicedesk.cmdb.domain.AbstractEntityClass"/>
    <mapping class="servicedesk.cmdb.domain.Attribute"/>
    <mapping class="servicedesk.cmdb.domain.AttributeValue"/>
    <mapping class="servicedesk.cmdb.domain.AttributeValuePk"/>
    <mapping class="servicedesk.cmdb.domain.EmployeeItem"/>
    <mapping class="servicedesk.cmdb.domain.Entity"/>
    <mapping class="servicedesk.cmdb.domain.IncidentItem"/>
    <mapping class="servicedesk.cmdb.domain.ProblemItem"/>
    <mapping class="servicedesk.cmdb.domain.Relationship"/>
    <mapping class="servicedesk.cmdb.domain.RelationshipClass"/>
    <mapping class="servicedesk.cmdb.domain.RfcItem"/>
    <mapping class="servicedesk.cmdb.domain.ServiceItem"/>
    <mapping class="servicedesk.cmdb.domain.UniversalItem"/>
    <mapping class="servicedesk.cmdb.domain.UniversalItemClass"/>
    
    <mapping class="servicedesk.change.domain.Rfc"/>
    <mapping class="servicedesk.change.domain.RfcPriority"/>
    <mapping class="servicedesk.change.domain.RfcImpact"/>

    <mapping class="servicedesk.em.domain.Event"/>
    <mapping class="servicedesk.em.domain.EventCategory"/>
    <mapping class="servicedesk.em.domain.EventParameter"/>
    <mapping class="servicedesk.em.domain.EventSignificance"/>

    <mapping class="servicedesk.im.domain.Incident"/>
    <mapping class="servicedesk.im.domain.IncidentCategory"/>
    <mapping class="servicedesk.im.domain.IncidentHistory"/>
    <mapping class="servicedesk.im.domain.IncidentImpact"/>
    <mapping class="servicedesk.im.domain.IncidentPriority"/>
    <mapping class="servicedesk.im.domain.IncidentSource"/>
    <mapping class="servicedesk.im.domain.IncidentStatus"/>
    <mapping class="servicedesk.im.domain.IncidentUrgency"/>
    <mapping class="servicedesk.im.domain.SupportGroup"/>

    <mapping class="servicedesk.pm.domain.KnownError"/>
    <mapping class="servicedesk.pm.domain.Problem"/>
    <mapping class="servicedesk.pm.domain.ProblemCategory"/>
    <mapping class="servicedesk.pm.domain.ProblemImpact"/>
    <mapping class="servicedesk.pm.domain.ProblemPriority"/>
    <mapping class="servicedesk.pm.domain.ProblemStatus"/>
    <mapping class="servicedesk.pm.domain.ProblemUrgency"/>
    <mapping class="servicedesk.pm.domain.Solution"/>
    <mapping class="servicedesk.pm.domain.SolutionType"/>

    <mapping class="servicedesk.rf.domain.RequestAttribute"/>
    <mapping class="servicedesk.rf.domain.RequestAttributeType"/>
    <mapping class="servicedesk.rf.domain.RequestCategory"/>
    <mapping class="servicedesk.rf.domain.RequestPriority"/>
    <mapping class="servicedesk.rf.domain.RequestStatus"/>
    <mapping class="servicedesk.rf.domain.ServiceRequest"/>

    <mapping class="servicedesk.scm.domain.Service"/>
    <mapping class="servicedesk.scm.domain.ServiceType"/>

    <mapping class="servicedesk.signal.domain.Signal"/>
    <mapping class="servicedesk.signal.domain.SignalAttribute"/>
    <mapping class="servicedesk.signal.domain.SignalGenerator"/>
    <mapping class="servicedesk.signal.domain.SignalObjectAttributeType"/>
    <mapping class="servicedesk.signal.domain.SignalObjectType"/>
    <mapping class="servicedesk.signal.domain.SignalReceiverType"/>
    <mapping class="servicedesk.signal.domain.SignalSignificanceType"/>
    <mapping class="servicedesk.signal.domain.SignalType"/>

    <mapping class="servicedesk.slm.domain.Agreement"/>

    <!-- listeners -->
    <event type="create">
        <listener class="servicedesk.infrastructure.general.dao.CreatorMarkedPersistEventListener"/>
        <listener class="servicedesk.infrastructure.general.dao.CreationTimeMarkedPersistEventListener"/>
        <listener class="org.hibernate.event.def.DefaultPersistEventListener"/>
    </event>

    <event type="post-insert">
        <!--listener class="org.hibernate.ejb.event.EJB3PostInsertEventListener"/-->
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

    <event type="post-update">
        <!--listener class="org.hibernate.ejb.event.EJB3PostUpdateEventListener"/-->
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

    <event type="post-delete">
        <!--listener class="org.hibernate.ejb.event.EJB3PostDeleteEventListener"/-->
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

    <event type="pre-collection-update">
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

    <event type="pre-collection-remove">
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

    <event type="post-collection-recreate">
        <listener class="org.hibernate.envers.event.AuditEventListener"/>
    </event>

  </session-factory>
</hibernate-configuration>
