<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE tiles-definitions PUBLIC
    "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
    "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>
	
    <!-- ITEM CLASS SEARCH -->
    <definition name="/cmdb/item/class" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/itemclass/index.jsp" />
    </definition>

    <definition name="/cmdb/item/class/browse" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.browse" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/itemclass/browse.jsp" />
    </definition>

    <definition name="/cmdb/item/class/search" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.search" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/itemclass/search.jsp" />
    </definition>

    <!-- ITEM CLASS CRUD -->
    <definition name="/cmdb/item/class/view" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.view" />
        <put-attribute name="title_args" value="${itemClass.name}" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/itemclass/view.jsp" />
    </definition>

    <definition name="/cmdb/item/class/edit" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.edit" />
        <put-attribute name="title_args" value="${itemClass.name}" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/itemclass/edit.jsp">
                <put-attribute name="submitLabel" value="edit.label" />
                <put-attribute name="submitCssClass" value="editsubmit" />
            </definition>
        </put-attribute>
    </definition>

    <definition name="/cmdb/item/class/add" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.add" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/itemclass/edit.jsp">
                <put-attribute name="submitLabel" value="add.label" />
                <put-attribute name="submitCssClass" value="add" />
            </definition>
        </put-attribute>
    </definition>

    <definition name="/cmdb/item/class/delete" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.class.delete" />
        <put-attribute name="title_args" value="${itemClass.name}" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/common/confirm.jsp">
                <put-attribute name="caption" value="confirm.action" />
                <put-attribute name="text" value="caption.cmdb.item.class.delete" />
                <put-attribute name="text_args" value="${itemClass.name}" />
            </definition>
        </put-attribute>
    </definition>

    <!-- ATTRIBUTE CRUD -->
    <definition name="/cmdb/class/attribute/add" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.class.attribute.add" />
        <put-attribute name="title_args" value="${attribute.entityClass.name}" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/attribute/edit.jsp">
                <put-attribute name="submitLabel" value="add.label" />
                <put-attribute name="submitCssClass" value="add" />
            </definition>
        </put-attribute>
    </definition>

    <definition name="/cmdb/class/attribute/edit" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.class.attribute.edit" />
        <put-attribute name="title_args" value="${attribute.name}, ${attribute.entityClass.name}" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/attribute/edit.jsp">
                <put-attribute name="submitLabel" value="edit.label" />
                <put-attribute name="submitCssClass" value="editsubmit" />
            </definition>
        </put-attribute>
    </definition>

    <definition name="/cmdb/class/attribute/delete" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.class.attribute.delete" />
        <put-attribute name="title_args" value="${attribute.name}, ${attribute.entityClass.name}" />
        <put-attribute name="body">
            <definition template="/WEB-INF/views/cmdb/common/confirm.jsp">
                <put-attribute name="caption" value="confirm.action" />
                <put-attribute name="text" value="caption.cmdb.class.attribute.delete" />
                <put-attribute name="text_args" value="${attribute.name}, ${attribute.entityClass.name}" />
            </definition>
        </put-attribute>
    </definition>

    <!-- ITEMS BROWSE -->
    <definition name="/cmdb/item/browse/tree" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.browse.tree" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/item/browse-tree.jsp" />
    </definition>

    <definition name="/cmdb/item/browse/category" extends="standard-layout">
        <put-attribute name="title" value="titles.cmdb.item.browse.category" />
        <put-attribute name="title_args" value="${itemClass.name}" />
        <put-attribute name="body" value="/WEB-INF/views/cmdb/item/browse-category.jsp" />
    </definition>
</tiles-definitions>